# Copy this file to .env and adjust values as needed for your environment.

# HTTP server listen address (host:port). Defaults to :8080 when unset.
WEB_HTTP_ADDR=:8080

# Graceful shutdown timeout. Accepts Go duration strings (e.g. 10s, 1m) or whole seconds.
WEB_SHUTDOWN_TIMEOUT=5s

# PostgreSQL connection string used by pgx.
# Update the database name if you prefer something else.
WEB_DATABASE_URL=postgres://postgres:postgres@localhost:5432/lyric?sslmode=disable

# Optional connection pool tuning.
# WEB_DATABASE_MAX_CONNS=4
# WEB_DATABASE_MAX_CONN_LIFETIME=30m
# WEB_DATABASE_MAX_CONN_IDLE_TIME=5m
#
WEB_ADMIN_SESSION_SECRET=123456

APP_ENV=development
FRONTEND_URL=


WEB_SMTP_HOST=smtp.gmail.com
WEB_SMTP_PORT=465
WEB_SMTP_USERNAME=
WEB_SMTP_PASSWORD=
WEB_SMTP_FROM=
WEB_AUTH_OTP_LENGTH=6
WEB_AUTH_OTP_TTL=15

WEB_AUTH_TOKEN_SECRET=super-secret-token-key
WEB_AUTH_TOKEN_TTL=24hr
# golang time parse format

